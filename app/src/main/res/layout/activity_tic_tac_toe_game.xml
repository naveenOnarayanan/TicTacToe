<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".TicTacToeMain"
    android:background="@color/background_material_dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:id="@+id/tic_tac_toe_grid"
        android:weightSum="1"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum=".9"
            android:layout_weight="0.3">
            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight=".3"
                android:id="@+id/b1"
                android:textSize="25dp"
                android:background="@color/background_material_dark" />
            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight=".3"
                android:textSize="25dp"
                android:background="@drawable/border_left_right" />
            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight=".3"
                android:id="@+id/b2"
                android:textSize="25dp"
                android:background="@color/background_material_dark" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum=".9"
            android:layout_weight=".3">
            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight=".3"
                android:id="@+id/b3"
                android:textSize="25dp"
                android:background="@drawable/border_top_bottom" />
            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight=".3"
                android:id="@+id/b4"
                android:textSize="25dp"
                android:background="@drawable/border_all_around" />
            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight=".3"
                android:id="@+id/b5"
                android:textSize="25dp"
                android:background="@drawable/border_top_bottom" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum=".9"
            android:layout_weight=".3">
            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight=".3"
                android:id="@+id/b6"
                android:textSize="25dp"
                android:background="@color/background_material_dark" />
            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight=".3"
                android:id="@+id/b7"
                android:textSize="25dp"
                android:background="@drawable/border_left_right" />
            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight=".3"
                android:id="@+id/b8"
                android:textSize="25dp"
                android:background="@color/background_material_dark" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
